{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--no-deps"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo clippy"
		},
		{
			"type": "shell",
			"command": "cargo test -j4",
			"options": {
				"env": {
					"RUSTFLAGS": "-C instrument-coverage",
					"RUST_MIN_STACK": "4000000"
				}
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"options": {
				"env": {
					"RUST_BACKTRACE": "1"
				}
			},
			"label": "rust: cargo run release"
		},
	]
}