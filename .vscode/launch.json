    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'imgsort'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=imgsort",
                    "--package=imgsort"
                ],
                "filter": {
                    "name": "imgsort",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'image_sort_60fps'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=image_sort_60fps",
                    "--package=image_sort_60fps"
                ],
                "filter": {
                    "name": "image_sort_60fps",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'image_sort_list'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=image_sort_list"
                ],
                "filter": {
                    "name": "image_sort_list",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}